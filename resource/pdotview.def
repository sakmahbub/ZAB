
product ZAB ERP

table pdotview
  caption "OT View"
  columns zid,xdate,xstaff,xname,xothours,xrow

  primary key zid,xdate,xstaff

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view pdotview (zid,xdate,xstaff,xname,xothours,xrow)~
                  as select zid,xdate,xstaff,(select xname from pdmst where zid=pdotdetail.zid and xstaff=pdotdetail.xstaff),~
                  xothours,xrow ~
                  from pdotdetail where xstatus='Open' and getdate() <= dateadd(day,60,xdate) and ~
                  xtype='Leave'
end table
