product ZAB ERP

table imstocktakeview
  caption "Stock Take Compare View"
  columns zid,xtagnum,xrow,xdate,xitem,xdesc,xqty,xwh,xstatustag
  primary key zid,xtagnum,xrow

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view imstocktakeview (zid,xtagnum,xrow,xdate,xitem,xdesc,xqty,xwh,xstatustag) ~
            as SELECT zid,xtagnum,xrow,~
            (select xdate from imtag where imtag.xtagnum=imtdet.xtagnum and imtag.zid=imtdet.zid),~
            xitem,(select xdesc from caitem where caitem.xitem=imtdet.xitem and caitem.zid=imtdet.zid),~
            xqty,xwh,xstatustag ~
            FROM imtdet
  end table

