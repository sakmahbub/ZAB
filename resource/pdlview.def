product ZAB ERP

table pdlview
  caption "Loan Schedual View"
  columns zid,xvoucher,xdate,xyear,xper,xamount

  sql create view pdlview(zid,xvoucher,xdate,xyear,xper,xamount,xstatus) ~
    as select d.zid,d.xvoucher,d.xdate,d.xyear,d.xper,d.xschamt,h.xstatus ~
    from pdloantrndt d inner join pdloantrn h on d.xvoucher=h.xvoucher ~
    union all ~
    select zid,xvoucher,xdate,year(xdate),month(xdate),xloanamt,xstatustag from pdloanwriteoff
end table 
