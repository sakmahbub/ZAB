
product ZAB ERP

table poreqadjview
  caption "Purchase Requisition Adjustment View"
 columns zid,xadvnum,xgrnnum,xporeqnum,xpornum,xtornum,xrow,xitem,xlineamt

  primary key zid,xadvnum,xgrnnum,xporeqnum,xpornum,xtornum,xrow,xitem,xlineamt


  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view poreqadjview (zid,xadjnum,xgrnnum,xporeqnum,xpornum,xtornum,xrow,xitem,xlineamt) ~
         as select a.zid,a.xporeqnum,b.xgrnnum,a.xadvnum,c.xpornum,c.xtornum,b.xrow,b.xitem,b.xlineamt ~
		 from poreqheader a join poreqdetail b on a.zid=b.zid and a.xporeqnum=b.xporeqnum ~
		 left join pogrnheader c on a.zid=c.zid and a.xadvnum=c.xporeqnum where left(a.xporeqnum,4)='PADJ'
end table
