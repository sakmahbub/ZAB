
product ZAB ERP

table imtoglview
  caption "IM Item Group View"

  columns zid,ximtrnnum,xwh,xgitem,xdate,xval,xvalamt,xtrn,xsign

  primary key zid,ximtrnnum

  foreign key
    zid references zbusiness.zid
  end foreign key

  sql create view imtoglview (zid,ximtrnnum,xwh,xgitem,xtype,xdate,xval,xvatamt,xtrn,xsign)~
                  as select zid,ximtrnnum,xwh,~
                  (select xgitem from caitem where caitem.xitem=imtrn.xitem and caitem.zid=imtrn.zid),~
		(select xcitem from caitem where caitem.xitem=imtrn.xitem and caitem.zid=imtrn.zid),~	
                  xdate,xval,xvatamt,left(ximtrnnum,4),xsign ~
		  from imtrn where xstatusjv<>'Confirmed' and xval>0 and left(ximtrnnum,4) in(select xtrn from imtogli) ~
		  and (Select xstype from caitem Where caitem.xitem=imtrn.xitem and caitem.zid=imtrn.zid)='Stock-N-Sell'


end table
