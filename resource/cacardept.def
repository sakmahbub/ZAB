



product ZAB ERP

table cacardept
  caption "Car & Department"
  columns zid,xregi,xlong
  primary key zid
  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view cacardept (zid,xregi,xlong)~
                  as select a.zid,a.xregi,'' from cacar a  ~
				  union all ~
				  select b.zid,b.xlong,'' from xcodes b where xtype='Department Name' and zactive=1
end table
