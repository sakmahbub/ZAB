
table poordview
  caption "POORDER View"
  columns zid,xpornum,xsup,xdate,xrow,xitem,xqtygrn,xunitpur,xqtypur,xporeqnum,xrate,xlineamt,xlcno,xstatus

  primary key zid,xpornum

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view poordview (zid,xpornum,xsup,xdate,xrow,xitem,xqtygrn,xunitpur,xqtypur,xporeqnum,xrate,xlineamt,xlcno,xstatus) ~
                  as select a.zid,a.xpornum,b.xsup,b.xdate,a.xrow,a.xitem,~
                  a.xqtygrn,a.xunitpur,a.xqtypur,b.xporeqnum,a.xrate,a.xlineamt,b.xlcno,b.xstatus ~
                  from poorddetail a left join poordheader b on a.zid=b.zid and a.xpornum=b.xpornum
end table