
product ZAB ERP 

table arciview
  caption "AR CI View"
  columns zid,xinvnum,xinvref,xcus,xdate,xdornum,xdeldate,xstatusjv,xstatusar
  primary key zid,xinvnum,xinvref,xcus,xdate,xdornum,xdeldate,xstatusjv,xstatusar
  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view arciview (zid,xinvnum,xinvref,xcus,xdate,xdornum,xdeldate,xstatusjv,xstatusar)~
                  as select c.zid,c.xinvnum,c.xinvref,c.xcus,c.xdate,d.xdornum,d.xdate,c.xstatusjv,d.xstatusar from opinvheader c join opdoheader d on c.zid=d.zid and c.xinvnum=d.xinvnum where d.xstatusdor='Confirmed' and c.xstatusjv in ('Partial','Open') 
				  

end table
