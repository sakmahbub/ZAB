
product ZAB ERP

table pdotamountview
  caption "OT View"
  columns zid,xdate,xstaff,xname,xothours,xrow

  primary key zid,xdate,xstaff

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view pdotamountview (zid,xdate,xstaff,xname,xothours,xrow)~
                  as select zid,xdate,xstaff,(select xname from pdmst where zid=pdotdetail.zid and xstaff=pdotdetail.xstaff),~
                  xothours,xrow ~
                  from pdotdetail where xstatus='Open' and xtype='Amount'
end table
