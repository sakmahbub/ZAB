product ZAB ERP

table opdoheaderviewnoti
  caption "AR Report View"
  columns zid,xdornum,xdate,xcus,xstatusdor,xstatusgl,xstatusar,xstatusjv,xrow

  primary key zid,xvoucher

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view opdoheaderviewnoti(zid,xdornum,xdate,xcus,xstatusdor,xstatusgl,xstatusar,xstatusjv,xrow) ~
			as select h.zid,h.xdornum,h.xdate,h.xcus,h.xstatusdor,h.xstatusgl,h.xstatusar,h.xstatusjv,rank() OVER (ORDER BY h.xdate,h.xdornum) ~
			from opdoheader h where h.xstatusdor='Confirmed'
			

end table