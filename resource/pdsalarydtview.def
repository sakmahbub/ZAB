product ZAB ERP

table pdsalarydtview
  caption "Salary Details View"
  columns zid,xstaff,xtype,xamount

  //primary key zid,xyear,xper,xstaff

//  foreign key
  //      zid references zbusiness.zid
  //end foreign key

  sql create view pdsalarydtview (zid,xstaff,xtype,xamount,xsign) ~
    as select zid,xstaff,xtype,sum(xamount)as xamount,(select xprops from xcodes where xtype='PD Transaction Type' and xcode=pdsalarydetail.xtype) as xsign ~
       from pdsalarydetail group by zid,xstaff,xtype
end table
