

product ZAB ERP

table opinvorderview
  caption "PI Ref View"
  columns zid,xpiref,xdate,xrow
  primary key zid,xpiref
  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view opinvorderview (zid,xpiref,xpidate,xcus,xorg,xitem,xqtydoc,xqtyinv,xordernum,xorderrow,xpirefr,xlcno,xfabrictype,xfabriccolor,xwidth,xgsm,xprcstype,xcolorcode,xbcolor,xordernumso)~
                  as select a.zid,b.xpiref,b.xpidate,b.xcus,c.xorg,a.xitem,a.xqtyord,isnull(a.xqtyinv,0),a.xordernum,a.xorderrow,b.xpirefr,b.xlcno, ~
				  a.xfabrictype,a.xfabriccolor,a.xwidth,a.xgsm,a.xprcstype,a.xcolorcode,a.xbcolor,a.xordernumso ~
                  from oporddetail a ~
				  join opordheader b on a.zid=b.zid and a.xordernum=b.xordernum ~
				  join cacus c on a.zid=b.zid and c.xcus=b.xcus ~
				  where (a.xqtyord-isnull(a.xqtyinv,0))>0

end table
