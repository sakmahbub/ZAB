product ZAB ERP

table bmbomheaderview 
  caption "BOM Number"

  primary key zid,xcus

  foreign key
        zid references zbusiness.zid
  end foreign key

	sql CREATE VIEW bmbomheaderview(zid,xbomnum,xdate,xitem,xdesc,zactive) ~
	AS ~
	SELECT a.zid,a.xbomnum,a.xdate,a.xitem,b.xdesc,a.zactive ~
					FROM bmbomheader a ~
					JOIN caitem b ~
					ON a.zid=b.zid ~
					AND a.xitem=b.xitem
end table
