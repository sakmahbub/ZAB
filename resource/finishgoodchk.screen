field ximtrnnum
	event after
    if imtrn.xstatusjv("ximtrnnum='"+ximtrnnum+"'") .eq. "Confirmed"
    		set #field(add.display)="hidden"
      	set #field(update.display)="hidden"
      	set #field(delete.display)="hidden"
		set #field(Confirm.display)="hidden"
	end if
    if imtrn.xstatus("ximtrnnum='"+ximtrnnum+"'") .eq. "Confirmed"
    		set #field(add.display)="hidden"
      	set #field(update.display)="hidden"
      	set #field(delete.display)="hidden"
		set #field(Confirm.display)="hidden"
	end if	
	set #field(Next.display)="hidden"
	set #field(Previous.display)="hidden"
	set #field(Top.display)="hidden"
	set #field(Bottom.display)="hidden"
	//class careports(getjspReport{immaintainance,1,ximtrnnum,Print Issue})
	end event
end field


