form imtrn
  caption "Issue Entry"
  table imtrn
  order ximtrnnum
  select "left(ximtrnnum,4)='IS--' and left(xdocnum,2)<>'SR' and left(xdocnum,2)='IS'"
  return "login"
  layout 2
  pstyle 3
        objects	Show,Clear,*Next,*Next,*Next,Add,Update,Delete,Confirm,*Next,*Next,*Next,Checkstock,~
