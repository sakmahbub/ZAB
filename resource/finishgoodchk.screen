          ximtrnnum,xdate,xwh,xwhdesc,xitem,xitemdesc,xcolorcode,xordernumso display(hide),~
          xunit display(const),xqty,xrate attrib(readonly),xref display(hide),xval attrib(readonly),xissuetype, xdocnum display(hide),xstatus display(const), ~
