  field xunit
	event after
		set xunit=caitem.xunitsel("xitem='"+xitem+"'")
	end event
end field
  
  field Checkstock
	event before
	//double stock
	if xwh .eq. ""
		error "Please Select Store"
	else if xitem .eq. ""
		error "Please Select Item"
	else if xcolorcode .eq. ""
	 set stock=#sql("select sum(xqty*xsign) from imtrn where xitem='"+xitem+"' and xwh='"+xwh+"'")
	else 
		set stock=#sql("select sum(xqty*xsign) from imtrn where xitem='"+xitem+"' and xwh='"+xwh+"' and xcolorcode='"+xcolorcode+"'")
	end if
	
	end event
	event after
		print "<font color=Green size=+2> Available Stock of Item "+xitem+" is : <font color=Red>  "+stock+" "+xunit+" </font> </font>"
	end event
  end field
  
  
    field Confirm
          event before
		  set backdate=#sql("select xdateexp from acdef")
		  set backentry=#sql("select xbacklock from acdef")
		   if imtrn.xstatus("ximtrnnum='"+ximtrnnum+"'") .ne. "Open"
				error "Cannot Proceed -- Transaction is not opened!"
			else if backentry .eq. "No" .and. xdate .le. backdate
				error "Back Lock Entry does not allow!"
            end if
          end event
          event after
		   set temp = #spsql(zabsp_PROC_Issue_Pricing,#id,#user,ximtrnnum,xwh) 
		   set temp = #sql("update imtrn set xstatus = 'Confirmed' where ximtrnnum='"+ximtrnnum+"'")
			action Show
          end event
        end field  

  field Add
    event before
	 set backdate=#sql("select xdateexp from acdef")
	 set backentry=#sql("select xbacklock from acdef")
	 set wh=branchclientview.xcode("xcode='"+xwh+"' and zactive=1")
     set xstatusjv = "Open"
	 set xstatus = "Open"
	 set xrate=0
	 set xval=0
	 set xvatrate=0
	 set xpiref= ""
	 set xbatch= ""
	 set avail = 0
	 set avail  = imstock.xavail("xitem='"+xitem+"' and xwh='"+xwh+"'")
	 set ordqty = xqty
		if xwh .eq. "" .or. wh .ne. xwh
			error "Please select Plant/Store Code Or Plant/Store not Exists!"
		//else if xissuetype .eq. ""
		//	error "Cannot Proceed -- Please Select Type of Issue"
		else if xnote .eq. ""
			error "Please Write Justification!"
		else if xqty .le. "0"
			error "Cannot Proceed -- Please Enter Issue Qty"
		else if backentry .eq. "No" .and. xdate .le. backdate
			 error "Back Lock Entry does not allow!"
		else if avail<ordqty
			error "<font size=+2 color=red>Cannot Proceed -- Available Stock Is: "+avail
			set xqty = 0

		else
		set xunit=caitem.xunitsel("xitem='"+xitem+"'")
					set xsign=-1
					//set xval=xqty*xrate
					set ximtrnnum = #trn("Inventory Transaction","IS--",10)
					set xdocnum=ximtrnnum
		end if
    end event
    event after
      set command = "add"
     // set temp = #spsql(sp_validateAfterIMtrn,#id,#user,ximtrnnum,xitem,xqty,command)
	//	set temp=#spsql(zabsp_imstock,#id,#user,xwh,xitem,xqty,"-1","Add")
	//				double rate
	//	set rate = #sql("select xrate from caitem where xitem ='"+xitem+"'")
	//	set temp = #sql("update imtrn set xrate = rate where ximtrnnum='"+ximtrnnum+"'")
//	set temp = #sql("update imtrn set xrate=0,xval=0 where ximtrnnum='"+ximtrnnum+"'") 
      action Show
    end event
  end field


