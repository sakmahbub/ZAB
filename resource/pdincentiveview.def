product ZAB ERP

table pdincentiveview
  caption "Incentive View"
  columns zid,xvoucher,xdate,xyear,xper,xamount

  sql create view pdincentiveview(zid,xstaff,xamount,xdincentive,xtype,xyear,xper,xdate) ~
    as  select b.zid,b.xstaff,xamount,isnull(w.xloanamt,0)as xidincentive,b.xtype,b.xyear,b.xper,w.xdate ~
        from pdbal b ~
        left join (select x.zid,h.xstaff,x.xloanamt,x.xdate ~
                    from pdloanwriteoff x ~
                    inner join pdloantrn h on x.zid=h.zid and x.xvoucher=h.xvoucher ~
                    where x.xstatustag='Incentive') w on w.zid=b.zid and w.xstaff=b.xstaff ~
        where b.xtype='Incentive'
end table
