
product ZAB ERP

table pdsuspendview
  caption "Leave View"
  columns zid,xyear,xper,xstaff,xday

  primary key zid,xyear,xper,xstaff

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view pdsuspendview (zid,xyear,xper,xstaff,xday)~
                  as select zid,xyear,month(xdate),xstaff,count(*) ~
                  from pdleavedetail where xtypeleave='Suspend' group by zid,xyear,month(xdate),xstaff,xtypeleave
end table
