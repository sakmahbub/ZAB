product ZAB ERP

table opordorderview
  caption "SO Ref View"
  columns zid,xordernumso,xordernum,xcus,xname,xorderrow,xorderdate,xitem,xcolorcode,xbcolor,xqtyord,xrate,xqtyinv,xunit
  primary key zid,xordernumso
  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view opordorderview (zid,xordernumso,xordernum,xcus,xname,xorderrow,xorderdate,xitem,xcolorcode,xbcolor,xqtyord,xrate,xqtyinv,xunit,xqtydel,xlineamt)~
	as select a.zid,b.xordernum,b.xinvnum,b.xcus,c.xorg,a.xorderrow,b.xorderdate,a.xitem,a.xcolorcode,a.xbcolor,a.xqtyord,a.xrate,a.xqtyinv,a.xunitsel,a.xqtydel,a.xlineamt ~
                  from oporddetailso a ~
				  join opordheaderso b on a.zid=b.zid and a.xordernum=b.xordernum ~
				  join cacus c on a.zid=b.zid and c.xcus=b.xcus 
				  where b.xstatusord='Comfirmed'
				  
				  
end table
