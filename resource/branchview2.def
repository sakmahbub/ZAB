product ZAB ERP

table branchview2
  caption "Branch View"
  columns zid,xtype,xlong,xcode

  primary key zid,xcode

  foreign key
        zid references zbusiness.zid
  end foreign key

	sql CREATE VIEW branchview2(zid,xtype,xlong,xcode,xmadd,xphone,xfax,xemail,xtypeobj,zactive,xwh,xacc) ~
	AS ~
	SELECT a.zid,b.xtype,b.xlong,b.xcode,b.xmadd,b.xphone,b.xfax,b.xemail,b.xtypeobj,b.zactive,b.xwh,cast(a.zid as varchar(50)) ~
	FROM zbusiness a JOIN ~
	xcodes b ON a.zid=b.zid ~
	WHERE b.xtype='Branch'

end table

