product ZAB ERP

table deliveylocview
  caption "Delivery Location View"
  columns zid,xtype,xlong,xcode

  primary key zid,xcode

  foreign key
        zid references zbusiness.zid
  end foreign key

	sql CREATE VIEW deliveylocview(zid,xcode,xlong,xtype,zactive) ~
	AS ~
	SELECT a.zid,b.xcode,b.xlong,b.xtype,b.zactive ~
	FROM zbusiness a JOIN ~
	xcodes b ON a.zid=b.zid ~
	WHERE b.xtype='Delivery Location'

end table

