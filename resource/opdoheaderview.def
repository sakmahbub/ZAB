product ZAB ERP

table opdoheaderview
  caption "AR Report View"
  columns zid,xdornum,xdate,xcus,xstatusord,xref,xnote,xwh,xdesc,xstatusar,xtotamt,~
          xdisc,xdiscf,xdatecom,xait,xamount,xsp,xvatamt,xaitamt,xdiscamt,xfm,xsm,xrsm


  primary key zid,xvoucher

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view opdoheaderview(zid,xdornum,xdate,xcus,xstatusord,xref,xnote,xwh,~
				xpornum,xstatusar,xtotamt,xdisc,xdiscf,xdatecom,xait,xamount,xvatrate,xdatedue,xavlperc,xsp,xpp,xvatamt,xaitamt,xdiscamt,~
				xfm,xsm,xrsm,xterritory,xfield,xregion,xarea,xpaymentterm,xdoctype,xproject,xyear,xper,xmarket,xtype,xroute,xstatus,xprime,~
				xdatepo,xdeltime,xdatedel,xsumnum,xcrnnum,xexpamt,xnetamt,xnetret) ~
			as select a.zid,a.xdornum,a.xdate,a.xcus,a.xstatusord,a.xref,a.xnote,a.xwh,~
				a.xpornum,a.xstatusar,a.xtotamt,a.xdisc,a.xdiscf,a.xdatecom,a.xait,a.xamount,a.xvatrate,a.xdatedue,~
				a.xavlperc,a.xsp,a.xpp,a.xvatamt,a.xaitamt,a.xdiscamt,~
				a.xfm,a.xsm,a.xrsm,a.xterritory,a.xfield,a.xregion,a.xarea,a.xpaymentterm,a.xdoctype,~
				a.xproject,a.xyear,a.xper,a.xmarket,a.xtype,a.xroute,a.xstatus,a.xprime,~
				a.xdatepo,a.xdeltime,a.xdatedel,a.xsumnum,a.xcrnnum,a.xexpamt,a.xnetamt,a.xnetret ~ 
                        	from opdoheader a ~
		UNION ALL ~
				select zid,xdornum,xdate,xcus,xstatusord,xref,xnote,xwh,~
				xpornum,xstatusar,xtotamt,xdisc,xdiscf,xdatecom,xait,xamount,xvatrate,xdatedue,xavlperc,xsp,xpp,xvatamt,xaitamt,xdiscamt,~
				xfm,xsm,xrsm,xterritory,xfield,xregion,xarea,xpaymentterm,xdoctype,xproject,xyear,xper,xmarket,xtype,xroute,xstatus,xprime,~
				xdatepo,xdeltime,xdatedel,xsumnum,xcrnnum,xexpamt,xnetamt,xnetret ~ 
                        	from opdoheaderarc

end table
