product ZAB ERP

table arreportview
  caption "AR Report View"
  columns zid,xvoucher,xdate,xprime,xcus,xwh,xdesc,xsp,xfm,xsm,xrsm,xsign,xbalprime,xdiscprime,xstatusjv,xref,~
			xvatamt,xaitamt,xpaymentterm,xdatedue,xcrterms,xcrlimit,xdateref,xbank,xname,xlcno,xnote,xaitbase,xadjustbase,xgainlossbase

  primary key zid,xvoucher

  foreign key
        zid references zbusiness.zid
  end foreign key

  sql create view arreportview (zid,xvoucher,xdate,xprime,xcus,xsign,xbalprime,xdiscprime,~
			        xstatusjv,xref,xvatamt,xaitamt,xpaymentterm,xdatedue,xcrterms,xcrlimit,xtype,xstatuschq,xtypetrn,xgrnnum,xpornum,~
					xdateref,xbank,xname,xlcno,xnote,xcurbuyer,xexchbuyer,xprimebuyer,xcur,xexch,xbase,xdocnum,xadjustment,xaitbase,xadjustbase,xgainlossbase) ~
                  as select a.zid,a.xvoucher,a.xdate,a.xprime,a.xcus,a.xsign,a.xbalprime,isnull(a.xdiscprime,0),~
		  a.xstatusjv,a.xref,isnull(a.xvatamt,0),isnull(a.xaitamt,0),a.xpaymentterm,a.xdatedue,c.xcrterms,c.xcrlimit, ~
                  a.xtype,a.xstatuschq,a.xtypetrn,a.xgrnnum,a.xpornum, ~
				  a.xdateref,a.xbank,b.xname,a.xlcno,a.xnote, ~
				  a.xcurbuyer,a.xexchbuyer,a.xprimebuyer,a.xcur,a.xexch,a.xbase,a.xdocnum,isnull(a.xadjustment,0),isnull(xaitbase,0),isnull(xadjustbase,0),isnull(xgainlossbase,0) ~
		  from arhed a ~
		  join cacus c on a.zid=c.zid and a.xcus=c.xcus ~
		  left join cabank b on a.zid=b.zid and a.xbank=b.xbank

end table
